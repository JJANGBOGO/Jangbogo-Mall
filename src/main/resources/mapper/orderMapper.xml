<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jangbogo.mall.dao.OrderMapper">

    <!--
        태   그 : insert
        기   능 : '결제' 테이블에 결제고유번호(tid), 주문번호(ord_idx) 포함한 데이터 저장하기
        아이디명 : saveKakaoPayment
        반환타입 : String
    -->
    <insert id="saveKakaoPayment" parameterType="map">
        insert into SETL(IDX, ORD_IDX, SETL_IDX)
        values (1, #{ord_idx}, #{tid})
    </insert>

    <!--
        태   그 : insert
        기   능 : '주문' 테이블에 행 추가하기
        아이디명 : addOrder
        반환타입 : Integer
        매개변수 : OrderDto orderDto
    -->
    <insert id="addOrder" parameterType="OrderDto">
        insert into ORD(IDX, USER_IDX, ORDR_NM, MPNO)
        values(#{idx}, #{user_idx}, #{ordr_nm}, #{mpno});
    </insert>

    <!--
        태   그 : select
        기   능 : '주문' 테이블 중 특정 주문 행 조회하기
        아이디명 : selectOrderDto
        반환타입 : String
        매개변수 : Integer user_idx
    -->
    <select id="selectOrderDto" parameterType="Integer" resultType="OrderDto">
        select * from ORD
        where IDX = #{idx};
    </select>

    <!--
        태   그 : update
        기   능 : '결제' 테이블에 '승인'처리 된 결제 정보 업데이트하기
        아이디명 : updateApprovedSetl
        반환타입 : int
        매개변수 : KakaoApproveResponseDto kakaoApproveResponseDto
    -->
    <update id="updateApprovedSetl" parameterType="KakaoApproveResponseDto">
        update SETL
        SET APRV_IDX = #{aid},
            ORD_TOT_AMT = #{amount.total},
            AMT = #{amount.total},
            MN_CD = 1,
            STATE_CD = 1,
            DEAL_TM = #{approved_at},
            UPT_TM = now()
        WHERE SETL_IDX = #{tid}
    </update>

</mapper>
